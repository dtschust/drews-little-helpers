#!/usr/bin/env node

const loadDist = require('./load-dist');
const doTasks = loadDist('src/utils/do-tasks.js');

const tasks = ['checkUpdatesForGaryKamiya', 'ptpTopWeeklySanityCheck'];

const weeklyTasks = [];

async function main() {
	await doTasks(tasks, 'Daily');
	// 2 = Tuesday, but this script runs at midnight UTC 4PM PST
	// so it'll be Monday in California
	if (new Date().getDay() === 2) {
		console.log('Also running weekly tasks!');
		await doTasks(weeklyTasks, 'Weekly');
}
}

main().then(process.exit);
